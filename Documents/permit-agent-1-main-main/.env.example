# Server-side API keys
OPENAI_API_KEY=
GOOGLE_MAPS_API_KEY=
GOOGLE_PLACES_API_KEY=

# Client-side (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/permitagent

# Stripe Configuration (Required for payments and subscriptions)
STRIPE_SECRET_KEY=sk_test_...  # Use sk_live_... for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...  # Use pk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_...  # Webhook endpoint secret from Stripe dashboard

# Stripe Product Price IDs (Create these in your Stripe dashboard)
STRIPE_PRO_PRICE_ID=price_...  # Monthly Pro plan price ID
STRIPE_BUSINESS_PRICE_ID=price_...  # Monthly Business plan price ID

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000  # Use https://yourdomain.com for production

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000  # Use https://yourdomain.com for production
NEXTAUTH_SECRET=your-nextauth-secret-here  # Generate a secure random string

# Google OAuth Configuration (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Hosting/runtime flags
# Set by platforms like Vercel automatically; keep blank locally
VERCEL=

# Optional tuning
# HTTP timeouts/retries adjust automatically on Vercel; override only if needed
# HTTP_TIMEOUT_MS=
# HTTP_MAX_RETRIES=
