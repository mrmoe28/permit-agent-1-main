# PermitAgent Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# NextAuth.js secret for JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string (Neon, Supabase, or local)
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Stripe Secret Key (starts with sk_live_ or sk_test_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key (starts with pk_live_ or pk_test_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for subscription plans
STRIPE_PRO_PRICE_ID=price_your_pro_plan_price_id
STRIPE_BUSINESS_PRICE_ID=price_your_business_plan_price_id

# Optional: Yearly plan price IDs
STRIPE_PRO_YEARLY_PRICE_ID=price_your_pro_yearly_plan_price_id
STRIPE_BUSINESS_YEARLY_PRICE_ID=price_your_business_yearly_plan_price_id

# =============================================================================
# AI INTEGRATION
# =============================================================================
# OpenAI API Key for permit data extraction
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# =============================================================================
# GOOGLE MAPS INTEGRATION
# =============================================================================
# Google Maps API Key for address autocomplete and geocoding
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# OPTIONAL: GITHUB INTEGRATION
# =============================================================================
# GitHub Personal Access Token (if using GitHub features)
GITHUB_TOKEN=ghp_your_github_token_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Skip environment validation during build (set to "true" for development)
SKIP_ENV_VALIDATION=false

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local
# 2. Fill in all the required values above
# 3. For production deployment on Vercel:
#    - Add these variables in Vercel dashboard under Settings > Environment Variables
#    - Make sure to set NODE_ENV=production and NEXT_PUBLIC_APP_URL to your domain
# 4. For Stripe setup:
#    - Create a Stripe account at https://stripe.com
#    - Get your API keys from the Stripe dashboard
#    - Create products and prices for your subscription plans
#    - Set up webhooks pointing to your domain/api/stripe/webhooks
# 5. For OpenAI setup:
#    - Create an account at https://platform.openai.com
#    - Generate an API key with GPT-4 access
# 6. For Google Maps setup:
#    - Create a project at https://console.cloud.google.com
#    - Enable Maps JavaScript API and Places API
#    - Create an API key with appropriate restrictions
